<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="700dip" />
            <stroke android:width="3dip" android:color="#000000" />
            <gradient android:angle="-90" android:startColor="#F4F7C5" android:endColor="#F4F7C5"  />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="700dip" />
            <stroke android:width="3dip" android:color="#710cb0" />
            <solid android:color="#CCCCFF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="700dip" />
            <stroke android:width="3dip" android:color="#CCCCFF" />
            <gradient android:angle="-90" android:startColor="#F4F7C5" android:endColor="#CCCCFF" />
        </shape>
    </item>
</selector>